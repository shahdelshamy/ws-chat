<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">


    <changeSet id="1" author="shahd.abdelnaby">
        <createTable tableName="user">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(25)" />
            <column name="last_name" type="VARCHAR(25)" />
            <column name="status" type="VARCHAR(25)" />
        </createTable>
    </changeSet>

    <changeSet id="2" author="shahd.abdelnaby">
        <createTable tableName="chat_room">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="sender_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="recipient_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="3" author="shahd.abdelnaby">
        <addForeignKeyConstraint baseTableName="chat_room" baseColumnNames="sender_id" constraintName="fk_chat_room_sender"
                                 referencedTableName="user"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="chat_room" baseColumnNames="recipient_id" constraintName="fk_chat_room_recipient"
                                 referencedTableName="user"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="4" author="shahd.abdelnaby">
        <createTable tableName="chat_message">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="chat_room_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="content" type="VARCHAR(255)" />
            <column name="date" type="TIMESTAMP" defaultValue="now()"/>
        </createTable>
    </changeSet>

    <changeSet id="5" author="shahd.abdelnaby">
        <addForeignKeyConstraint baseTableName="chat_message" baseColumnNames="chat_room_id" constraintName="fk_chat_message_chat_room"
                                 referencedTableName="chat_room"
                                 referencedColumnNames="id"/>
    </changeSet>


</databaseChangeLog>
