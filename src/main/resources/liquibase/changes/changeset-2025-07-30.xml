<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">


    <changeSet id="1" author="shahd.abdelnaby">
        <addColumn tableName="user">
            <column name="last_seen" type="TIMESTAMP" defaultValue="now()"  />
        </addColumn>

        <addColumn tableName="user">
            <column name="created_on" type="TIMESTAMP"/>
        </addColumn>

        <addColumn tableName="user">
            <column name="email" type="char(50)"/>
        </addColumn>

        <addColumn tableName="user">
            <column name="phone_number" type="char(11)"/>
        </addColumn>
    </changeSet>

    <changeSet id="2" author="shahd.abdelnaby">
        <addColumn tableName="chat_room">
            <column name="chat_room" type="char(50)"/>
        </addColumn>
    </changeSet>

    <changeSet id="3" author="shahd.abdelnaby">
        <dropForeignKeyConstraint baseTableName="chat_message" constraintName="fk_chat_message_chat_room"/>
    </changeSet>

    <changeSet id="4" author="shahd.abdelnaby">
        <modifyDataType tableName="chat_message" columnName="chat_room" newDataType="char(50)"/>
    </changeSet>

</databaseChangeLog>
