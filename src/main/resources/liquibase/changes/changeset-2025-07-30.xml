<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">


    <changeSet id="1" author="shahd.abdelnaby">
        <addColumn tableName="user">
            <column name="last_seen_on" type="TIMESTAMP"   />
        </addColumn>

        <addColumn tableName="user">
            <column name="created_on" type="TIMESTAMP" defaultValue="now()"/>
        </addColumn>

        <addColumn tableName="user">
            <column name="phone_number" type="char(11)"/>
        </addColumn>
    </changeSet>

    <changeSet id="2" author="shahd.abdelnaby">
        <addNotNullConstraint
                tableName="user"
                columnName="phone_number"
                columnDataType="char(11)" />

        <addUniqueConstraint
                tableName="user"
                columnNames="phone_number"
                constraintName="uc_user_phone_number" />
    </changeSet>

</databaseChangeLog>
